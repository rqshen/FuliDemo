<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <!--标题-->
    <com.bcb.base.view.ToolbarView
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        style="@style/line"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="72dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_buy_fail"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="28dp"/>

    <!--身份认证提示-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非常抱歉，购买失败"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请重新购买，为您造成不便十分抱歉"
        android:textColor="@color/text_gray"
        android:textSize="15sp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/buy_again"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_solid_red"
        android:gravity="center"
        android:text="重新购买"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/contact_customer_service"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_stroke_white3"
        android:gravity="center"
        android:text="联系客服"
        android:textColor="@color/txt_middle_gray"
        android:textSize="16sp"/>

</LinearLayout>

