<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="20dip"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <!--&lt;!&ndash; 显示栏 &ndash;&gt;-->
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:gravity="center">-->
                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:background="@drawable/apply_form_03"/>-->
            <!--</LinearLayout>-->
            <!-- 资产信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dip"
                android:background="@drawable/white_bg"
                android:orientation="vertical">
                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dip"
                    android:layout_marginTop="17dip"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dip"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:padding="0dip"
                    android:text="个人资产信息"
                    android:textSize="@dimen/main_text_default"
                    android:textColor="@color/txt_black"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="3dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 家庭总收入 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/total_household_income_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="家庭月收入（税后）"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/total_household_income_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/total_household_income"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/total_household_income_view"
                        android:layout_toLeftOf="@id/total_household_income_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 家庭固定支出 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/household_fixed_expenses_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="家庭月支出"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/household_fixed_expenses_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/household_fixed"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/household_fixed_expenses_view"
                        android:layout_toLeftOf="@id/household_fixed_expenses_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:hint="房租、车贷、房贷等"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 房产价值 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/property_value_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="房产价值"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/property_value_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/property_value"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/property_value_view"
                        android:layout_toLeftOf="@id/property_value_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 车产价值 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/vehicle_value_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="车产价值"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/vehicle_value_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/vehicle_value"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/vehicle_value_view"
                        android:layout_toLeftOf="@id/vehicle_value_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 有价证券 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/marketable_securities_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="有价证券"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/marketable_securities_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/marketable_securities"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/marketable_securities_view"
                        android:layout_toLeftOf="@id/marketable_securities_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 其他资产 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/other_assets_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="其他资产"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/other_assets_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/other_assets"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/other_assets_view"
                        android:layout_toLeftOf="@id/other_assets_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>
                <!-- 房产负债 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/property_liabilities_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="待还房贷金额"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/property_liabilities_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/property_liabilities"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/property_liabilities_view"
                        android:layout_toLeftOf="@id/property_liabilities_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 车产负债 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/vehicle_liabilities_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="待还车贷金额"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/vehicle_liabilities_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/vehicle_liabilities"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/vehicle_liabilities_view"
                        android:layout_toLeftOf="@id/vehicle_liabilities_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 信用卡负债 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/credit_card_debt_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="待还信用卡金额"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/credit_card_debt_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/credit_card_debt"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/credit_card_debt_view"
                        android:layout_toLeftOf="@id/credit_card_debt_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>

                <!-- 其他负债 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="12dip"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/other_liabilities_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dip"
                        android:layout_centerVertical="true"
                        android:text="其他欠款金额"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/other_liabilities_yuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:text="万元"
                        android:textSize="@dimen/main_text_default"/>
                    <EditText
                        android:id="@+id/other_liabilities"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@id/other_liabilities_view"
                        android:layout_toLeftOf="@id/other_liabilities_yuan"
                        android:layout_marginRight="10dip"
                        android:inputType="number"
                        android:singleLine="true"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:background="@drawable/edittext_none_background"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>
            </LinearLayout>

            <!-- 按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/asset_button"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="20dip"
                    android:layout_marginBottom="20dip"
                    android:background="@drawable/button_red_selector"
                    android:gravity="center"
                    android:paddingBottom="0dip"
                    android:paddingTop="0dip"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_default" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>