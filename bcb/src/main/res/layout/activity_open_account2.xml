<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/check_idcad"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text=""
        android:textColor="#333"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/rl_idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tv_idcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="身份证号 "
            android:textColor="#333"
            android:textSize="16sp"/>


        <EditText
            android:id="@+id/et_idcard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_idcard"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您的身份证号"
            android:singleLine="true"
            android:textColorHint="#999"
            android:maxLength="18"
            android:text=""
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@+id/tv_idcard"
            android:layout_alignRight="@+id/et_idcard"
            android:layout_below="@+id/tv_idcard"
            android:layout_marginTop="10dp"
            android:background="@color/gray"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_open"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_solid_red"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/customer_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="45dp"
        android:text="遇到问题？"
        android:textColor="@color/red"
        android:textSize="@dimen/main_text_small"/>
</LinearLayout>
