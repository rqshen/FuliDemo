<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用余额(元)"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/value_ye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/value_zero"
            android:textColor="@color/white"
            android:textSize="32sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/linegray"/>

    <RelativeLayout
        android:id="@+id/layout_cz"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_cz"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:src="@drawable/cz_3x"
            />

        <TextView
            android:id="@+id/text_cz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_cz"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_small"/>

        <ImageView
            android:id="@+id/user_image_cz"
            style="@style/image_indicator"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/service_cz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/user_image_cz"
            android:gravity="center"
            android:text=""
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_small"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linegray"/>

    <RelativeLayout
        android:id="@+id/layout_tx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_tx"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:src="@drawable/tx_3x"
            />

        <TextView
            android:id="@+id/text_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_tx"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_small"/>

        <ImageView
            android:id="@+id/user_image_tx"
            style="@style/image_indicator"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/service_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/user_image_tx"
            android:gravity="center"
            android:text=""
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_small"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/linegray"/>

    <RelativeLayout
        android:id="@+id/mx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_mx"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:src="@drawable/mx_3x"
            />

        <TextView
            android:id="@+id/text_mx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_mx"
            android:gravity="center"
            android:text="账单明细"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_small"/>

        <ImageView
            android:id="@+id/user_image_mx"
            style="@style/image_indicator"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/service_mx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/user_image_mx"
            android:gravity="center"
            android:text=""
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_small"/>
    </RelativeLayout>
</LinearLayout>
