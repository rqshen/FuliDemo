<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 借款用途 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款用途"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/main_text_default"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/loan_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linegray2"/>

                <!-- 借款期限 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款期限"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/main_text_default"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/loanduration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linegray2"/>

                <!--借款金额-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款金额"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/main_text_default"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/loan_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linegray2"/>

                <!-- 借款利率 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="借款利率"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/main_text_default"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/loan_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linegray2"/>

                <!-- 分期还款 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还款期数"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/main_text_default"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/loan_repayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linegray2"/>

                <!-- 逾期罚息 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="逾期罚息"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/main_text_default"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/loan_punitive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/linegray2"/>
            </LinearLayout>

            <!-- 备注 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="*最终服务费率、利率以审核通过后为准"
                    android:textColor="@color/txt_middle_gray"
                    android:textSize="@dimen/main_text_small"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/extra_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="材料补充："/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/background_gray2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="序号"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="材料名称"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/background_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="1"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="二代身份证正反两面"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/background_gray2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="2"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="手持身份证半身正面照"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/background_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="3"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="个人信用报告"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/background_gray2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="4"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="工资银行流水及银行卡照片"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/background_white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="5"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/background_gray"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingLeft="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/main_text_rather_small"
                            android:textColor="@color/text_black"
                            android:text="公积金或社保缴存证明二选一"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:padding="15dp"
                    android:background="@color/background_white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="附件上传"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ico_upload"/>

                    </LinearLayout>

                    <com.bcb.presentation.view.custom.NoScrollGridView
                        android:id="@+id/noScrollgridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:horizontalSpacing="6dp"
                        android:verticalSpacing="6dp"
                        android:numColumns="4"
                        android:scrollbars="none" />

                </LinearLayout>

            </LinearLayout>

            <!-- 下一个还款日和还款金额以及立即还款按钮 -->
            <LinearLayout
                android:id="@+id/layout_next_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <!-- 横线 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dip">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/linegray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dip"
                        android:layout_marginLeft="30dip"
                        android:text="下一个还款日"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/loan_next_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dip"
                        android:layout_marginLeft="5dip"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:layout_marginBottom="15dip"
                        android:layout_marginLeft="30dip"
                        android:text="还款金额"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/loan_next_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:layout_marginBottom="15dip"
                        android:layout_marginLeft="5dip"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>


                <!-- 横线 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/linegray"/>
                </LinearLayout>

                <!-- 立即还款-->
                <Button
                    android:id="@+id/button_recharge"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/button_solid_red"
                    android:text="立即还款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_default"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>