<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginTop="7.5dip"
                    android:background="@color/linegray"/>
            </LinearLayout>
            <!-- 文字介绍和图片 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dip"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">

                    <!-- 借款用途 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:text="借款用途"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                        <TextView
                            android:id="@+id/loan_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginLeft="10dip"
                            android:text=""
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>

                    <!-- 借款期限 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:text="借款期限"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                        <TextView
                            android:id="@+id/loanduration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginLeft="10dip"
                            android:text=""
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:text="借款金额"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                        <TextView
                            android:id="@+id/loan_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginLeft="10dip"
                            android:text=""
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>

                    <!-- 借款利率 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:text="借款利率"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                        <TextView
                            android:id="@+id/loan_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginLeft="10dip"
                            android:text=""
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>

                    <!-- 分期还款 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:text="还款期数"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                        <TextView
                            android:id="@+id/loan_repayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginLeft="10dip"
                            android:text=""
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>

                    <!-- 逾期罚息 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="70dip"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:text="逾期罚息"
                            android:textSize="@dimen/main_text_default"
                            android:textColor="@color/txt_gray"/>
                        <TextView
                            android:id="@+id/loan_punitive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginLeft="10dip"
                            android:text=""
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- 右边图片 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true">
                    <ImageView
                        android:id="@+id/icon_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/loan_item_margin_top"
                        android:layout_marginRight="@dimen/loan_item_margin_right"
                        android:background="@drawable/ico_my_checking"/>
                </RelativeLayout>
            </RelativeLayout>

            <!-- 备注 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:text="注意：最终服务费率、利率以审核通过后为准"
                    android:textColor="@color/red"
                    android:textSize="@dimen/main_text_small"/>
            </LinearLayout>

            <!-- 横线 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>
            </LinearLayout>



            <!-- 下一个还款日和还款金额以及立即还款按钮 -->
            <LinearLayout
                android:id="@+id/layout_next_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <!-- 横线 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dip">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/linegray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dip"
                        android:layout_marginLeft="30dip"
                        android:text="下一个还款日"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/loan_next_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dip"
                        android:layout_marginLeft="5dip"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:layout_marginBottom="15dip"
                        android:layout_marginLeft="30dip"
                        android:text="还款金额"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                    <TextView
                        android:id="@+id/loan_next_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:layout_marginBottom="15dip"
                        android:layout_marginLeft="5dip"
                        android:text=""
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default"/>
                </LinearLayout>
                <!-- 横线 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/linegray"/>
                </LinearLayout>

                <!-- 立即还款-->
                <Button
                    android:id="@+id/button_recharge"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dip"
                    android:background="@drawable/button_solid_red"
                    android:text="立即还款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_default"/>
            </LinearLayout>

            <!-- 客服和邮箱 -->
            <LinearLayout
                android:id="@+id/layout_other_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 横线 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dip">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/linegray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dip"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dip"
                        android:background="@drawable/circle_green"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        3<TextView
                            android:id="@+id/text_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 如需补充材料，请发送至 "
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_small"/>
                        <TextView
                            android:id="@+id/text_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fksh@100cb.cn"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_small"/>
                        <TextView
                            android:id="@+id/text_des1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 邮箱"
                            android:textSize="@dimen/main_text_small"
                            android:textColor="@color/txt_gray"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="30dip"
                        android:background="@drawable/circle_blue"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_des2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginBottom="15dip"
                            android:text=" 客服QQ："
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_small"/>
                        <TextView
                            android:id="@+id/text_qq"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:layout_marginBottom="15dip"
                            android:text="1836425663"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_small"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- 横线 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/linegray"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>