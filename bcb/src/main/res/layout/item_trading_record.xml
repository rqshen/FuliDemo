<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_bg"
    android:orientation="vertical"
    android:padding="0dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_rather_large"
        android:layout_marginLeft="@dimen/margin_size_large"
        android:layout_marginRight="@dimen/margin_size_large">

        <TextView
            android:id="@+id/name"
            android:singleLine="true"
            android:layout_marginRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="物业宝"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/main_text_default" />

        <TextView
            android:id="@+id/status"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_alignParentRight="true"
            android:text="投标成功"
            android:textColor="@color/red"
            android:textSize="@dimen/main_text_default"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_large">

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="3000000.00元"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/main_text_default"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="2015-10-16"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_default"/>
    </RelativeLayout>

</LinearLayout>