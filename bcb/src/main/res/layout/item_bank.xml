<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/bank_icon"
            android:layout_width="80dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/bank_icon"
            android:text="中国建设银行"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/main_text_default" />

        <TextView
            android:id="@+id/bank_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bank_icon"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/bank_icon"
            android:text="每笔限额5万，每日限10万"
            android:textColor="@color/txt_gray"
            android:textSize="@dimen/main_text_small"/>
    </RelativeLayout>

</LinearLayout>