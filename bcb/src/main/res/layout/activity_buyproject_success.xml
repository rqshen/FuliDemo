<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--内容-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:paddingBottom="40dip">
            <!--购买成功-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/circle_01"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/yes_img"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="购买成功"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
            <!--购买金额等-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@drawable/edit_bg"
                android:padding="10dip" >

                <RelativeLayout
                    android:id="@+id/laypout_sec_1"
                    android:layout_width="128dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:padding="4dip" >

                    <ImageView
                        android:id="@+id/line_1"
                        android:layout_width="4dip"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/OrderAmount"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/line_r" />

                    <TextView
                        android:id="@+id/txt_1"
                        style="@style/txt_buy_title"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="6dip"
                        android:layout_toRightOf="@id/line_1"
                        android:text="购买金额" />

                    <TextView
                        android:id="@+id/OrderAmount"
                        style="@style/txt_buy_value"
                        android:layout_below="@id/txt_1"
                        android:layout_marginLeft="6dip"
                        android:layout_marginTop="6dip"
                        android:layout_toRightOf="@id/line_1"
                        android:text="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/laypout_sec_2"
                    android:layout_width="128dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/laypout_sec_1"
                    android:padding="4dip" >

                    <ImageView
                        android:id="@+id/line_2"
                        android:layout_width="4dip"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/Duration"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/line_y" />

                    <TextView
                        android:id="@+id/txt_2"
                        style="@style/txt_buy_title"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="6dip"
                        android:layout_toRightOf="@id/line_2"
                        android:text="理财期限" />

                    <TextView
                        android:id="@+id/Duration"
                        style="@style/txt_buy_value"
                        android:layout_below="@id/txt_2"
                        android:layout_marginLeft="6dip"
                        android:layout_marginTop="6dip"
                        android:layout_toRightOf="@id/line_2"
                        android:text="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/laypout_sec_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/laypout_sec_1"
                    android:layout_marginTop="5dip"
                    android:padding="4dip" >

                    <ImageView
                        android:id="@+id/line_3"
                        android:layout_width="4dip"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/InterestAmount"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/line_gr" />

                    <TextView
                        android:id="@+id/txt_3"
                        style="@style/txt_buy_title"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="6dip"
                        android:layout_toRightOf="@id/line_3"
                        android:text="预期收益" />

                    <TextView
                        android:id="@+id/InterestAmount"
                        style="@style/txt_buy_value"
                        android:layout_below="@id/txt_3"
                        android:layout_marginLeft="6dip"
                        android:layout_marginTop="6dip"
                        android:layout_toRightOf="@id/line_3"
                        android:singleLine="true"
                        android:text="" />
                </RelativeLayout>
            </RelativeLayout>
            <!--额外奖励-->
            <LinearLayout
                android:id="@+id/RewardRateDescn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_bg"
                android:orientation="vertical"
                android:padding="0dip"
                android:visibility="visible" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/extra_reward" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dip"
                        android:text="额外奖励"
                        android:textColor="@color/txt_black"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:background="@color/linegray" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip" >
                    <TextView
                        android:id="@+id/RewardRateDescn_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dip"
                        android:text="1元"
                        android:textColor="@color/red" />
                    <TextView
                        android:id="@+id/RewardRateDescn_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_marginLeft="13dip"
                        android:text="奖励描述"
                        android:textColor="@color/txt_gray"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--微信助手-->
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/buyproject_success_image"/>
    </RelativeLayout>

</LinearLayout>