<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_base_root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_hight"
        android:background="@color/red"

        android:orientation="horizontal"
        android:visibility="gone"/>
    <!-- 标题 -->
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_topbar"

        android:background="@color/white">

        <ImageView
            android:id="@+id/back_img"
            style="@style/btn_back"
            android:layout_alignParentLeft="true"
            android:visibility="gone"/>
        <!-- 左标题 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_large"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@+id/title_text">

            <TextView
                android:id="@+id/left_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/main_text_default"/>

            <ImageView
                android:id="@+id/dropdown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dip"
                android:paddingRight="5dp"
                android:src="@drawable/r_back_3x"/>
        </LinearLayout>

        <!-- 标题 -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/main_text_large"/>

        <!-- 右边的标题 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/right_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 右边的图标 -->
        <ImageView
            android:id="@+id/right_img"
            style="@style/btn_right"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:background="@color/background"
        android:orientation="vertical">
    </LinearLayout>
</RelativeLayout>