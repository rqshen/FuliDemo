<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/r_logo_3x"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="注册福利金融账户"
            android:textColor="#424954"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginTop="10dip">

            <EditText
                android:id="@+id/regservicecode"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:textColor="#424954"
                android:textColorHint="@color/txt_gray"
                android:textSize="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/regservicecode"
                android:background="#e5e5e5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/regservicecode"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_size_default"
                android:background="@drawable/r_yanzhengma_3x"/>

            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ff4c4c"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">

            <com.bcb.util.PasswordEditText
                android:id="@+id/userpwd"
                android:layout_width="match_parent"
                android:layout_height="50dip"

                android:background="@null"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="设置您的密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#424954"
                android:textColorHint="@color/txt_gray"
                android:textSize="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/userpwd"
                android:background="#e5e5e5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userpwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_size_default"
                android:background="@drawable/r_lock_3x"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pwd_strength_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:text="请输入8-15位字符"
                android:textColor="#5677fc"
                android:textSize="@dimen/main_text_small"/>

            <TextView
                android:id="@+id/strength1"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="@drawable/button_solid_gray"
                android:gravity="center"
                android:text="弱"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_small"/>

            <TextView
                android:id="@+id/strength2"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="@drawable/button_solid_gray"
                android:gravity="center"
                android:text="中"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_small"/>

            <TextView
                android:id="@+id/strength3"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:background="@drawable/button_solid_gray"
                android:gravity="center"
                android:text="强"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_small"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">

            <com.bcb.util.PasswordEditText
                android:id="@+id/userpwdconfirm"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:hint="确认您的密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#424954"
                android:textColorHint="@color/txt_gray"
                android:textSize="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/userpwdconfirm"
                android:background="#e5e5e5"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userpwdconfirm"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_size_default"
                android:background="@drawable/r_lock_3x"/>

            <ImageView
                android:id="@+id/im_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:src="@drawable/r_error_3x"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/errortips_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="28dip"
                android:singleLine="true"
                android:layout_marginTop="15dip"
                android:text="请输入8-15位登录密码"
                android:textColor="@color/red"
                android:textSize="@dimen/main_text_rather_small"
                android:visibility="gone"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/errortips_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dip"
            android:layout_marginRight="28dip"
            android:background="@drawable/error_tips"
            android:gravity="center"
            android:layout_marginTop="15dip"
            android:text="请输入验证码"
            android:textColor="@color/red"
            android:textSize="@dimen/main_text_default"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:background="@drawable/r_button"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/button_titlesize"/>


        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="已有账号？去登陆"
            android:textColor="#999"
            android:textSize="15sp"/>

    </LinearLayout>

    <include
        layout="@layout/b_bottom"
        />
</RelativeLayout>