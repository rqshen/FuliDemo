<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip" >

        <com.bcb.data.util.PasswordEditText
            android:id="@+id/userpwd"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="28dip"
            android:layout_marginRight="28dip"
            android:background="@drawable/edit_bg"
            android:focusableInTouchMode="true"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:maxLength="15"
            android:paddingLeft="35.2dip"
            android:singleLine="true"
            android:textColorHint="@color/txt_gray"
            android:textSize="@dimen/main_text_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userpwd"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/write" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pwd_strength_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="11.2dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/strength1"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/button_solid_gray"
            android:gravity="center"
            android:text="弱"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_small"/>

        <TextView
            android:id="@+id/strength2"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:background="@drawable/button_solid_gray"
            android:gravity="center"
            android:text="中"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_small"/>

        <TextView
            android:id="@+id/strength3"
            android:layout_width="30dip"
            android:layout_height="wrap_content"
            android:background="@drawable/button_solid_gray"
            android:gravity="center"
            android:text="强"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_small"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip" >

        <com.bcb.data.util.PasswordEditText
            android:id="@+id/userpwdconfirm"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="28dip"
            android:layout_marginRight="28dip"
            android:background="@drawable/edit_bg"
            android:focusableInTouchMode="true"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:maxLength="15"
            android:paddingLeft="35.2dip"
            android:singleLine="true"
            android:textColorHint="@color/txt_gray"
            android:textSize="@dimen/main_text_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userpwdconfirm"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/write" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/errortips_passwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="28dip"
            android:layout_marginTop="11.2dip"
            android:singleLine="true"
            android:text="请输入8-15位登录密码"
            android:textColor="@color/red"
            android:textSize="@dimen/main_text_rather_small"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="15dip" >

        <EditText
            android:id="@+id/regservicecode"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="28dip"
            android:layout_marginRight="28dip"
            android:background="@drawable/edit_bg"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingLeft="35.2dip"
            android:singleLine="true"
            android:textColorHint="@color/txt_gray"
            android:textSize="@dimen/main_text_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/regservicecode"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:background="@drawable/write" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:background="@drawable/request_code_selector"
            android:gravity="center"
            android:minWidth="85dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_small" />
    </RelativeLayout>

    <TextView
        android:id="@+id/errortips_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dip"
        android:layout_marginRight="28dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/error_tips"
        android:gravity="center"
        android:text="请输入验证码"
        android:textColor="@color/red"
        android:textSize="@dimen/main_text_default"
        android:visibility="gone" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_red_selector"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_default" />
    
    <TextView
        android:id="@+id/customer_service"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="28dp"
        android:gravity="center_vertical"
        android:textColor="@color/blue"
        android:textSize="@dimen/main_text_small"
        android:text="收不到验证码？客服帮您解决"/>
</LinearLayout>