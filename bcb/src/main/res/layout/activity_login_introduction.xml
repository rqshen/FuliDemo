<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_introduction_background"
    tools:context=".presentation.view.activity.Activity_Login_Introduction">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 注册有礼和登陆 -->
        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:id="@+id/indicator_layout"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle_gray_introduction"/>
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/circle_gray_stroke"/>
            </LinearLayout>
            <Button
                android:id="@+id/button_register"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/button_solid_red_register"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_text_default"
                android:text="注册有礼"/>
            <Button
                android:id="@+id/button_login"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button_stroke_gray_login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/main_text_default"
                android:text="登录"/>
        </LinearLayout>
        <!-- 滑动图片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/button_layout"
            android:gravity="center">
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="@dimen/login_introduction_viewpager_maxwidth"
                android:layout_height="@dimen/login_introduction_viewpager_maxwidth"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
