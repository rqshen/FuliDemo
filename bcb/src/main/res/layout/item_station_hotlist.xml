<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_bg"
    android:orientation="vertical"
    android:padding="0dip" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_default">
        <TextView
            android:id="@+id/company"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_large"
            android:layout_marginTop="@dimen/margin_size_default"
            android:layout_centerVertical="true"
            android:text="UC浏览器-财富驿站"
            android:textColor="@color/text_black"
            android:textSize="@dimen/main_text_large" />
        <LinearLayout
            android:id="@+id/layout_check_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textSize="@dimen/main_text_default"
                android:text="查看公司介绍"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/forward_default"
                android:layout_marginRight="@dimen/margin_size_default"
                android:layout_marginLeft="@dimen/margin_size_small"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/address"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_large"
            android:layout_marginTop="5dip"
            android:text="广州市天河区黄埔大道云路"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/main_text_default" />
    </LinearLayout>
