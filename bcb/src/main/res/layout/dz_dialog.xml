<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_centerInParent="true"
        android:background="@drawable/dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/r_logo_3x"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_b_1"
            android:layout_centerHorizontal="true"
            android:text="福利金融"
            android:textColor="#333"
            android:textSize="28sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_b_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/r_ren_zheng"
            android:drawablePadding="5dp"
            android:text="有米科技、七煋瓢虫互联网金融专项基金战略投资"
            android:textColor="#999"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dl"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_weight="50"
                android:background="@drawable/r_button"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/button_titlesize"/>

            <Button
                android:id="@+id/zc"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="45"
                android:background="@drawable/button_stroke_red2"
                android:text="注册"
                android:textColor="@color/red"
                android:textSize="@dimen/button_titlesize"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
