<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >
    <!-- 标题 -->
    <include layout="@layout/frag_base" />
    <com.bcb.presentation.view.custom.PullableView.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 下拉刷新控件-->
        <include layout="@layout/refresh_head" />
        <com.bcb.presentation.view.custom.PullableView.PullableScrollView
            android:id="@+id/layout_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="15dip"
                    android:orientation="vertical">
                    <!-- 加入公司的Banner -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/join_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
                            android:visibility="visible"
                            android:background="@drawable/join_company_banner" />

                        <!-- 已经加入公司显示的信息 -->
                        <LinearLayout
                            android:id="@+id/user_company_layout"
                            android:layout_width="match_parent"
                            android:layout_height="20dip"
                            android:layout_marginTop="10dip"
                            android:layout_marginBottom="10dip"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone" >
                            <!-- 用户名 -->
                            <TextView
                                android:id="@+id/user_join_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dip"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textSize="@dimen/main_text_small"
                                android:textColor="@color/txt_gray"/>
                            <ImageView
                                android:layout_width="10dip"
                                android:layout_height="1dip"
                                android:layout_marginLeft="5dip"
                                android:background="@color/txt_gray"/>
                            <!-- 公司缩写 -->
                            <TextView
                                android:id="@+id/user_comany_shortname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dip"
                                android:text=""
                                android:textColor="@color/company_name"
                                android:textSize="@dimen/main_text_small"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dip"
                                android:background="@drawable/icon_joined_company"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- 包括今日收益、账户余额、待回款金额、累计收益等 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/linegray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/ll_test"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:orientation="vertical" >
                            <!-- 总资产 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7.5dp"
                                android:text="@string/value_earn"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>

                            <TextView
                                android:id="@+id/value_earn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="7.5dp"
                                android:gravity="center"
                                android:text="@string/value_zero"
                                android:textColor="#3399ff"
                                android:textSize="@dimen/main_text_default" />
                        </LinearLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/linegray"/>
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:orientation="vertical" >
                            <!-- 账户余额 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7.5dp"
                                android:text="@string/value_balance"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>

                            <TextView
                                android:id="@+id/value_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="7.5dp"
                                android:text="@string/value_zero"
                                android:textColor="@color/txt_black"
                                android:textSize="@dimen/main_text_default"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/linegray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:orientation="vertical" >
                            <!-- 待收本息 -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7.5dp"
                                android:text="@string/value_back"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>

                            <TextView
                                android:id="@+id/value_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="7.5dp"
                                android:text="@string/value_zero"
                                android:textColor="@color/txt_black"
                                android:textSize="@dimen/main_text_default" />
                        </LinearLayout>
                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"/>
                        <RelativeLayout
                            android:layout_width="0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:orientation="vertical" >
                            <!-- 冻结金额 -->
                            <LinearLayout
                                android:id="@+id/layout_freeze"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="35dp"
                                    android:layout_marginTop="7.5dp"
                                    android:text="@string/value_total"
                                    android:textColor="@color/txt_gray"
                                    android:textSize="@dimen/main_text_small"/>
                                <TextView
                                    android:id="@+id/value_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="35dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="7.5dp"
                                    android:text="@string/value_zero"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/main_text_default" />
                            </LinearLayout>

                            <!-- 冻结金额提示 -->
                            <LinearLayout
                                android:id="@+id/freeze_amount_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="visible"
                                android:layout_toRightOf="@id/layout_freeze">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dip"
                                    android:background="@drawable/freeze_amount"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/linegray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/recharge_btn"
                            android:layout_width="120dip"
                            android:layout_height="35dp"
                            android:layout_margin="@dimen/margin_size_default"
                            android:background="@drawable/bg_sel_stroke_blue"
                            android:text="@string/recharge_btn"
                            android:textColor="#3399ff"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_default" />

                        <TextView
                            android:id="@+id/withdraw_btn"
                            android:layout_width="120dip"
                            android:layout_height="35dp"
                            android:layout_marginLeft="40dp"

                            android:background="@drawable/bg_sel_stroke_gray"
                            android:text="@string/withdraw_btn"
                            android:textColor="@color/txt_gray"
                            android:gravity="center"
                            android:textSize="@dimen/main_text_default" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/linegray"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/margin_size_default"
                        android:background="@color/linegray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/trading_record"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip" >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/trade_record" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7.5dp"
                                    android:text="@string/trading_record"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/main_text_small" />
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/linegray"/>
                        <LinearLayout
                            android:id="@+id/money_flow_water"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/flow_water" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7.5dp"
                                    android:text="交易明细"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/main_text_small" />
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/linegray"/>
                        <LinearLayout
                            android:id="@+id/borrow_money"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip" >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/borrow_money" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7.5dp"
                                    android:text="@string/borrow_money"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/main_text_small" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/linegray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/coupons"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/coupons" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7.5dp"
                                    android:text="@string/coupons"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/main_text_small" />
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/linegray"/>
                        <LinearLayout
                            android:id="@+id/privilege_money"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp" >
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/privilege_money" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7.5dp"
                                    android:text="@string/privilege_money"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/main_text_small" />
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/linegray"/>
                        <LinearLayout
                            android:id="@+id/managed_slb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="10dip"
                            android:paddingTop="10dip" >
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="33dp"
                                    android:layout_height="33dp"
                                    android:src="@drawable/managed_slb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="7.5dp"
                                    android:text="生利宝"
                                    android:textColor="@color/txt_black"
                                    android:textSize="@dimen/main_text_small" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linegray" />
                        <RelativeLayout
                            android:id="@+id/managed_funds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" >
                            <ImageView
                                android:id="@+id/optionicon_tg"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="22dp"
                                android:src="@drawable/account_tg" />
                            <TextView
                                android:id="@+id/textViewtg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/optionicon_tg"
                                android:gravity="center"
                                android:text="资金托管"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                            <ImageView
                                android:id="@+id/user_image_indtg"
                                style="@style/image_indicator"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linegray"/>
                        <RelativeLayout
                            android:id="@+id/layout_security"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" >
                            <ImageView
                                android:id="@+id/iv_security"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="22dp"
                                android:src="@drawable/iv_security" />

                            <TextView
                                android:id="@+id/text_security"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/iv_security"
                                android:gravity="center"
                                android:text="我的保险"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                            <ImageView
                                android:id="@+id/user_image_security"
                                style="@style/image_indicator"
                                android:layout_alignParentRight="true"/>
                            <TextView
                                android:id="@+id/service_security"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/user_image_security"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linegray" />
                        <RelativeLayout
                            android:id="@+id/layout_customer_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" >
                            <ImageView
                                android:id="@+id/optionicon_01"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="22dp"
                                android:src="@drawable/icon_user_customer" />

                            <TextView
                                android:id="@+id/text_customer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/optionicon_01"
                                android:gravity="center"
                                android:text="@string/customer_service"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                            <ImageView
                                android:id="@+id/user_image_ind01"
                                style="@style/image_indicator"
                                android:layout_alignParentRight="true"/>
                            <TextView
                                android:id="@+id/service_text_01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/user_image_ind01"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/value_qqvip"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linegray" />
                        <RelativeLayout
                            android:id="@+id/layout_phone_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" >
                            <ImageView
                                android:id="@+id/optionicon_03"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="22dp"
                                android:src="@drawable/icon_contact" />
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/optionicon_03"
                                android:gravity="center"
                                android:text="@string/hotline"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                            <ImageView
                                android:id="@+id/user_image_ind02"
                                style="@style/image_indicator"
                                android:layout_alignParentRight="true"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/user_image_ind02"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/value_hotline"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linegray"/>
                        <RelativeLayout
                            android:id="@+id/layout_account_settting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" >
                            <ImageView
                                android:id="@+id/optionicon_04"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="22dp"
                                android:src="@drawable/account_setting" />
                            <TextView
                                android:id="@+id/textView4"
