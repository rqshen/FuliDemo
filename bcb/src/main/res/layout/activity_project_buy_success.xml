<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical"
    >

    <!--标题-->
    <com.bcb.base.view.ToolbarView
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        style="@style/line"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="72dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_buy_success"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="28dp"/>

    <!--身份认证提示-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜您，购买成功"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本次购买"
            android:textColor="@color/txt_gray"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/bug_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/txt_gray"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元，继续理财获得更多收益"
            android:textColor="@color/txt_gray"
            android:textSize="15sp"/>

    </LinearLayout>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/more_financial_product"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_solid_red"
        android:gravity="center"
        android:text="查看更多理财产品"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/bug_complete"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_stroke_white3"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/txt_middle_gray"
        android:textSize="16sp"/>

</LinearLayout>

