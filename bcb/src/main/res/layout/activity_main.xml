<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tabbar_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#f7f7f7">

        <RelativeLayout
            android:id="@+id/layout_main"
            style="@style/layout_main_bottom"
            android:layout_gravity="center"
            android:onClick="onClick" >

            <ImageView
                android:id="@+id/img_mainpage"
                style="@style/txt_mainpage_bottom"
                android:src="@drawable/main_home_page_default" />
            <TextView
                android:id="@+id/txt_mainpage"
                style="@style/txt_main_bottom"
                android:text="首页" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/layout_product"
            style="@style/layout_main_bottom"
            android:layout_gravity="center"
            android:onClick="onClick" >

            <ImageView
                android:id="@+id/img_product"
                style="@style/txt_mainpage_bottom"
                android:src="@drawable/main_product_default" />

            <TextView
                android:id="@+id/txt_product"
                style="@style/txt_main_bottom"
                android:text="产品列表" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_secure"
            style="@style/layout_main_bottom"
            android:layout_gravity="center"
            android:onClick="onClick" >

            <ImageView
                android:id="@+id/img_secure"
                style="@style/txt_mainpage_bottom"
                android:src="@drawable/main_secure_default" />

            <TextView
                android:id="@+id/txt_secure"
                style="@style/txt_main_bottom"
                android:text="安全保障" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_user"
            style="@style/layout_main_bottom"
            android:layout_gravity="center"
            android:onClick="onClick" >

            <ImageView
                android:id="@+id/img_user"
                style="@style/txt_mainpage_bottom"
                android:src="@drawable/main_my_default" />

            <TextView
                android:id="@+id/txt_user"
                style="@style/txt_main_bottom"
                android:text="我" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@id/bottom"
        android:background="@color/linegray" />

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line"
        android:background="@color/white" />
</RelativeLayout>