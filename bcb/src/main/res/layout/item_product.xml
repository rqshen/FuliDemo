<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector_background"
    android:orientation="vertical"
    android:padding="0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:maxWidth="@dimen/item_text_max_width"
                android:singleLine="true"
                android:text="涨薪宝201510121028-第3期"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/item_text_default" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_size_default"
                    android:background="@drawable/main_item_stroke_green"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:text="本息保障"
                    android:textColor="@color/item_color"
                    android:textSize="@dimen/item_text_small"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/linegray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 新手标提示 -->
            <ImageView
                android:id="@+id/new_product_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <!--年化收益等内容-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:text="8.0"
                                android:textColor="@color/item_color"
                                android:textSize="@dimen/item_text_xlarge" />
                            <TextView
                                android:id="@+id/fukubukuro_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/item_color"
                                android:layout_marginLeft="5dp"
                                android:text=""
                                android:textSize="@dimen/item_text_small"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/item_text_small"
                            android:text="年化收益率(%)"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/linegray" />
                <!--进度-->
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/item_text_small"
                            android:textStyle="normal"
                            android:text="期限"/>

                        <TextView
                            android:id="@+id/duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:layout_marginLeft="12dp"
                            android:text="00"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/item_text_small" />

                        <TextView
                            android:id="@+id/duration_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/item_text_small"
                            android:textStyle="normal"
                            android:text="天"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textStyle="normal"
                            android:text="可投"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/item_text_small" />
                        <TextView
                            android:id="@+id/amountBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:singleLine="true"
                            android:textStyle="normal"
                            android:text="196354元"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/item_text_small" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textStyle="normal"
                            android:text="进度"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/item_text_small" />
                        <ProgressBar
                            android:id="@+id/progress_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="4dp"
                            android:layout_marginLeft="12dp"
                            android:max="100"
                            android:progress="0"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/item_progress_orange" />
                        <TextView
                            android:id="@+id/value_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:singleLine="true"
                            android:textStyle="normal"
                            android:text="70%"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/item_text_small" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>