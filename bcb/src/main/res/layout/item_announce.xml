<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_bg"
    android:orientation="vertical"
    android:padding="0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/announce_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:maxWidth="@dimen/item_text_max_width"
                android:singleLine="true"
                android:text="涨薪宝201510121028-第3期"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/item_text_default" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dip"
                android:background="@drawable/main_item_stroke_green"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="本息保障"
                android:textColor="@color/item_color"
                android:textSize="@dimen/main_text_small"/>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:layout_height="1dip"
            android:background="@color/linegray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/announce_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:text="8"
                        android:textColor="@color/item_color"
                        android:textSize="@dimen/item_text_large" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/item_color"
                        android:textSize="@dimen/item_text_default"
                        android:text="%"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/announce_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90"
                        android:textColor="@color/item_text_color"
                        android:textSize="@dimen/item_text_large" />
                    <TextView
                        android:id="@+id/duration_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/item_text_color"
                        android:textSize="@dimen/item_text_default"
                        android:text="天"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.3">
                <TextView
                    android:id="@+id/announce_text"
                    android:layout_width="95dip"
                    android:layout_height="35dip"
                    android:background="@drawable/button_stroke_blue"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:gravity="center"
                    android:text="立即预约"
                    android:textSize="@dimen/item_text_default"
                    android:textColor="@color/item_blue" />
                <TextView
                    android:id="@+id/announce_predict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/announce_text"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:text="已有21人预约"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/item_text_small" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>