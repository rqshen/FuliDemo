<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.5dip"
            android:layout_marginRight="7.5dip"
            android:orientation="vertical" >
            <!-- 人人买房福利 -->
            <LinearLayout
                android:id="@+id/house_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:padding="3dip"
                android:background="@drawable/white_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dip"
                    android:layout_marginBottom="10dip"
                    android:paddingBottom="0dip"
                    android:orientation="horizontal">
                    <!-- 图标 -->
                    <LinearLayout
                        android:layout_width="@dimen/loan_introduction_value"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:background="@drawable/loan_ico_house"/>
                    </LinearLayout>
                    <!-- 文字 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/loan_house_titleview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人人买房福利"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_large"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="仅限购房借款"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_small"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- 横线 -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="18dip"
                    android:layout_marginRight="18dip"
                    android:background="@color/linegray"/>
                <!-- 简介 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="15dip"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:orientation="horizontal">
                        <!-- 图标 -->
                        <LinearLayout
                            android:layout_width="@dimen/loan_introduction_value"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/loan_ico_tlimit"/>
                        </LinearLayout>
                        <!-- 文字 -->
                        <LinearLayout
                            android:layout_width="85dip"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="借款期限"
                                android:textColor="@color/txt_gray"
                                android:textSize="@dimen/main_text_small"/>
                        </LinearLayout>
                        <!-- 文字 -->
