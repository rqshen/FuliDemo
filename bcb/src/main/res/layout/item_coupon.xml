<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_view"
            android:layout_width="match_parent"
            android:layout_height="28dip"
            android:background="@drawable/button_solid_red">
            <TextView
                android:id="@+id/coupon_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_size_rather_large"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="现金券"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_default" />
            <TextView
                android:id="@+id/coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_rather_large"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="xxxxx过期"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_default" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_rather_large">

            <TextView
                android:id="@+id/coupon_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="0000"
                android:textColor="@color/red"
                android:textSize="@dimen/main_text_large" />
            <TextView
                android:id="@+id/txt_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/coupon_amount"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dip"
                android:layout_marginTop="2dip"
                android:text="元"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/main_text_small" />
            <TextView
                android:id="@+id/select"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:background="@drawable/button_stroke_red"
                android:text="使 用"
                android:textColor="@color/red"
                android:textSize="@dimen/main_text_default" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/linegray"/>
            <TextView
                android:id="@+id/coupon_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="@dimen/margin_size_rather_large"
                android:text="投资xxxx元可用"
                android:textColor="@color/txt_gray"
                android:textSize="@dimen/main_text_default" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>