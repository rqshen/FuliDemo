<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_item_frame"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/value_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_large"
            android:layout_marginBottom="@dimen/margin_size_large"
            android:layout_marginLeft="@dimen/margin_size_rather_large"
            android:textSize="13sp"
            android:textColor="@color/txt_black"
            android:text="2016年03月38日"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/linegray" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_size_large"
        android:paddingBottom="@dimen/margin_size_large">
        <TextView
            android:id="@+id/value_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_rather_large"
            android:text="100000"
            android:textColor="@color/red"
            android:textSize="21sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:gravity="right">
            <TextView
                android:id="@+id/value_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12.5dp"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/main_text_small"
                android:text="充值成功"/>
            <LinearLayout
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/image_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ind"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/linegray" />
</LinearLayout>