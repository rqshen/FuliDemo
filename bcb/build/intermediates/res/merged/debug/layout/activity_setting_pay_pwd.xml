<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="42dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:orientation="vertical"
            android:background="@android:color/white">

            <com.bcb.data.util.PasswordEditText
                android:id="@+id/newpwd"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:singleLine="true"
                android:textColorHint="@color/txt_gray"
                android:textSize="@dimen/main_text_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="15dip"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tips"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入6位纯数字密码"
                android:textColor="@color/blue"
                android:textSize="@dimen/main_text_small" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/main_text_small"
                android:text="(非银行卡密码)"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@android:color/white">

            <com.bcb.data.util.PasswordEditText
                android:id="@+id/confirmpwd"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="再次确认密码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:singleLine="true"
                android:textColorHint="@color/txt_gray"
                android:textSize="@dimen/main_text_default" />
        </LinearLayout>

        <TextView
            android:id="@+id/error_tips"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/error_tips"
            android:text="两次输入密码不一致"
            android:textColor="@color/red"
            android:textSize="@dimen/main_text_default"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dip"
            android:background="@drawable/button_red_selector"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/main_text_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/withdraw_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:text="温馨提示"
                    android:textColor="@color/red"
                    android:textSize="@dimen/main_text_small" />
            </LinearLayout>
        </RelativeLayout>
        <!-- 温提示内容 -->
        <LinearLayout
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1."
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="10dp"
                    android:text="福利金融交易密码将用于福利金融平台投资和提现过程"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="请不要将福利金融交易密码告知他人，为保障账户安全，建议您定期修改交易密码"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dip"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3."
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="建议交易密码与银行卡密码不相同"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>