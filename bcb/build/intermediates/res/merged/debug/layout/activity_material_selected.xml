<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 提示文字 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/main_text_default"
                    android:text="选择一下任一材料上传，证明你的职业身份"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <!-- 名片 -->
                <LinearLayout
                    android:id="@+id/layout_visit_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/material_background">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/visit_imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:layout_marginBottom="15dip"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:background="@drawable/visit_card"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/red"
                            android:gravity="center"
                            android:padding="5dip"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/main_text_default"
                            android:text="名片"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 在职证明 -->
                <LinearLayout
                    android:id="@+id/layout_incumbency_cerification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/material_background">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:layout_marginBottom="15dip"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:background="@drawable/incumbency_certificate"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/red"
                            android:gravity="center"
                            android:padding="5dip"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/main_text_default"
                            android:text="在职证明"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- 工牌 -->
                <LinearLayout
                    android:id="@+id/layout_badge_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/material_background">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:layout_marginBottom="15dip"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:background="@drawable/badge_card"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/red"
                            android:gravity="center"
                            android:padding="5dip"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/main_text_default"
                            android:text="工牌"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 企业邮箱 -->
                <LinearLayout
                    android:id="@+id/layout_company_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/material_background">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:layout_marginBottom="15dip"
                            android:layout_marginLeft="15dip"
                            android:layout_marginRight="15dip"
                            android:background="@drawable/company_email_card"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/red"
                            android:gravity="center"
                            android:padding="5dip"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/main_text_default"
                            android:text="企业邮箱"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>