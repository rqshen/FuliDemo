<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" xmlns:tools="http://schemas.android.com/tools" tools:context=".presentation.view.activity.Activity_Forget_Pwd">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dip"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textSize="@dimen/main_text_default"
                android:visibility="gone"
                android:textColor="@color/txt_black"
                android:text="身份证号码:"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="5dip" >
                <EditText
                    android:id="@+id/id_card"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@android:color/white"
                    android:hint="请输入身份证号码"
                    android:paddingLeft="10dip"
                    android:textColorHint="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
            </RelativeLayout>


            <TextView
                android:id="@+id/phonenumber_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textSize="@dimen/main_text_default"
                android:textColor="@color/txt_black"
                android:text="手机号码:"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip" >
                <EditText
                    android:id="@+id/phone"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@android:color/white"
                    android:digits="0123456789"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="10dip"

                    android:textColorHint="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:textSize="@dimen/main_text_default"
                android:textColor="@color/txt_black"
                android:text="验证码:"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:layout_marginTop="10dip" >

                <EditText
                    android:id="@+id/regservicecode"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:background="@android:color/white"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="10dip"
                    android:singleLine="true"
                    android:textColorHint="@color/txt_gray"
                    android:textSize="@dimen/main_text_small" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="35dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/request_code_selector"
                    android:gravity="center"
                    android:minWidth="85dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_small" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="11dip"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="10dip"
                    android:textSize="@dimen/main_text_default"
                    android:textColor="@color/txt_black"
                    android:text="输入新密码:"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:orientation="vertical" >
                    <EditText
                        android:id="@+id/newpwd"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:background="@android:color/white"
                        android:hint="请输入新密码"
                        android:paddingLeft="10dip"
                        android:singleLine="true"
                        android:textColorHint="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pwd_strength_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/main_text_default"
                        android:text="密码强度:"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:gravity="center"
                            android:text="请输入8-15位字符"
                            android:textColor="#5677fc"
                            android:textSize="@dimen/main_text_small"/>
                        <TextView
                            android:id="@+id/strength1"
                            android:layout_width="30dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:background="@drawable/button_solid_gray"
                            android:gravity="center"
                            android:text="弱"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_small"/>

                        <TextView
                            android:id="@+id/strength2"
                            android:layout_width="30dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dip"
                            android:background="@drawable/button_solid_gray"
                            android:gravity="center"
                            android:text="中"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_small"/>

                        <TextView
                            android:id="@+id/strength3"
                            android:layout_width="30dip"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_solid_gray"
                            android:gravity="center"
                            android:text="强"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_text_small"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/error_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="15dip"
                    android:background="@drawable/error_tips"
                    android:gravity="center"
                    android:text="密码输入不规范"
                    android:textColor="@color/red"
                    android:textSize="@dimen/main_text_default"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/button_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/button_red_selector"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_default" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>