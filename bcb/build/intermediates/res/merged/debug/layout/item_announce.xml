<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="0dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/announce_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_size_large"
                android:singleLine="true"
                android:text="涨薪宝201510121028-第3期"
                android:textColor="@color/item_text_color"
                android:textSize="@dimen/item_text_default" />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dip"
                android:background="@drawable/main_item_stroke_green"
                android:layout_marginRight="@dimen/margin_size_large"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:singleLine="true"
                android:text="本息保障"
                android:textColor="@color/item_color"
                android:textSize="@dimen/item_text_small"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/linegray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <!-- 年化收益率 -->
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <!--年化收益等内容-->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/announce_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="8.0"
                            android:textColor="@color/item_color"
                            android:textSize="@dimen/item_text_xlarge" />
                        <TextView
                            android:id="@+id/fukubukuro_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/item_color"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textSize="@dimen/item_text_small"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/item_text_small"
                        android:text="年化收益率(%)"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/linegray" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical|right">
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:gravity="right">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="bottom|center_horizontal">
                        <TextView
                            android:id="@+id/announce_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="85dp"
                            android:background="@drawable/announce_button_background"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:gravity="center"
                            android:text="立即预约"
                            android:textSize="@dimen/item_text_small"
                            android:textColor="@color/item_blue" />
                        <TextView
                            android:id="@+id/announce_predict"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:singleLine="true"
                            android:text="已有21人预约"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/item_text_xsmall" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>