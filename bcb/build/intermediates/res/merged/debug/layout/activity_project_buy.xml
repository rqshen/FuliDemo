<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!-- 账户余额 -->
                <RelativeLayout
                    android:id="@+id/layout_money"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/cz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"
                            />

                        <ImageView
                            style="@style/forward_default"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_recharge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dip"
                            android:text="账户余额"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_default"/>

                        <TextView
                            android:id="@+id/wallet_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="85dip"
                            android:gravity="right"
                            android:text="0.00"
                            android:textColor="@color/red"
                            android:textColorHint="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linegray"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>
                <!-- 投资金额 -->
                <RelativeLayout
                    android:id="@+id/ll_investment_amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_tz"
                            android:layout_width="80dip"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="18dip"
                            android:gravity="center_vertical"
                            android:text="投资金额"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_default"/>

                        <EditText
                            android:id="@+id/invest_money"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_tz"
                            android:background="@null"
                            android:digits="0123456789."
                            android:gravity="right|center_vertical"
                            android:hint="100元起投"
                            android:inputType="numberDecimal"
                            android:maxLength="7"
                            android:paddingRight="45dip"
                            android:singleLine="true"
                            android:textColor="@color/txt_black"
                            android:textColorHint="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18sp"
                        android:text="元"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_alignParentBottom="true"
                        android:background="@color/linegray"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/linegray"/>
                <!-- 优惠券 -->
                <RelativeLayout
                    android:id="@+id/layout_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dip"
                            android:text="优惠券"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_default"/>

                        <TextView
                            android:id="@+id/coupon_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="45dip"
                            android:gravity="right"
                            android:text="暂无可用券"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/coupon_arrow"
                        style="@style/forward_default"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/linegray"/>
                <!-- 优惠券金额 -->
                <RelativeLayout
                    android:id="@+id/layout_coupon_money"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dip"
                            android:text="优惠券金额"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_default"/>

                        <TextView
                            android:id="@+id/coupon_momey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="45dip"
                            android:layout_weight="1"
                            android:text="￥0"
                            android:textColor="@color/txt_gray"
                            android:textSize="@dimen/main_text_default"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="18sp"
                            android:text="元"
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_default"/>
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp">

                <TextView
                    android:id="@+id/earnings_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18sp"
                    android:text="预期收益"
                    android:textColor="@color/txt_gray"
                    android:textSize="@dimen/main_text_default"/>

                <TextView
                    android:id="@+id/prospective_earning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/earnings_description"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dip"
                    android:singleLine="true"
                    android:text="0元"
                    android:textColor="@color/txt_black"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:id="@+id/project_service_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/earnings_description"
                    android:padding="18dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/service_fee"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_buy"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/button_solid_black"
                    android:gravity="center"
                    android:paddingBottom="0dip"
                    android:paddingTop="0dip"
                    android:text="立即申购"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_text_default"/>

                <include layout="@layout/com_funds_trusteeship_tip"/>

                <!-- 出错提示 -->
                <TextView
                    android:id="@+id/error_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="18dip"
                    android:layout_marginRight="18dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>