<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_yhq_unused"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/coupon_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:gravity="center"
        android:text="现金券"
        android:textColor="@color/white"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/txt_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="55dip"
        android:paddingBottom="8dp"
        android:text="￥"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_yuan"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/txt_yuan"
        android:text="0000"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/coupon_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_yuan"
        android:layout_below="@+id/txt_yuan"
        android:layout_marginTop="1dip"
        android:text="投资xxxx元可用"
        android:textColor="@color/white"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/coupon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_yuan"
        android:layout_below="@+id/coupon_rule"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dip"
        android:text="xxxxx过期"
        android:textColor="@color/white"
        android:textSize="13sp"/>


    <TextView
        android:id="@+id/select"
        android:layout_width="80dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/button_stroke_white2"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:text="使 用"
        android:textColor="@color/white"
        android:textSize="@dimen/main_text_default"/>
</RelativeLayout>
