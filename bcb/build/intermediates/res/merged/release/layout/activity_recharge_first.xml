<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dip"
                android:background="@drawable/edit_bg"
                android:orientation="vertical"
                android:padding="0dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/recharge_margin_left"
                        android:text="@string/recharge_text1"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@color/linegray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_size_large"
                        android:text="@string/recharge_text2"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default" />

                    <EditText
                        android:id="@+id/username"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:background="@drawable/rounded_corners_edit_bg"
                        android:hint="@string/recharge_text3"
                        android:paddingLeft="10dip"
                        android:text=""
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_size_large"
                        android:text="@string/recharge_text4"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default" />

                    <EditText
                        android:id="@+id/idcard"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:background="@drawable/rounded_corners_edit_bg"
                        android:hint="@string/recharge_text5"
                        android:paddingLeft="10dip"
                        android:text=""
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="7dip"
                android:background="@drawable/edit_bg"
                android:orientation="vertical"
                android:padding="0dip" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/recharge_margin_left"
                        android:text="@string/recharge_text6"
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@color/linegray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/recharge_margin_left"
                        android:text="@string/recharge_text7"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default" />

                    <LinearLayout
                        android:id="@+id/select_bank"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="@dimen/recharge_margin_right"
                        android:background="@drawable/rounded_corners_edit_bg"
                        android:paddingLeft="10dip" >

                        <TextView
                            android:id="@+id/txt_choose_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:hint="@string/recharge_text8"
                            android:textSize="@dimen/main_text_default" />

                        <RelativeLayout
                            android:id="@+id/layout_choosed_bank"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/bank_icon"
                                android:layout_width="60dip"
                                android:layout_height="40dip"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:id="@+id/bank_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dip"
                                android:layout_toRightOf="@+id/bank_icon"
                                android:textColor="@color/txt_black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/bank_rule"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/bank_name"
                                android:layout_below="@+id/bank_name"
                                android:textColor="@color/txt_gray"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/select_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dip"
                                android:background="@drawable/select_down" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/recharge_margin_left"
                        android:text="@string/recharge_text9"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default" />

                    <EditText
                        android:id="@+id/bankcardcode"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="@dimen/recharge_margin_right"
                        android:background="@drawable/rounded_corners_edit_bg"
                        android:hint="@string/recharge_text10"
                        android:paddingLeft="10dip"
                        android:text=""
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/recharge_margin_left"
                        android:text="@string/recharge_text11"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default" />

                    <EditText
                        android:id="@+id/phone"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="@dimen/recharge_margin_right"
                        android:background="@drawable/rounded_corners_edit_bg"
                        android:hint="@string/recharge_text12"
                        android:inputType="phone"
                        android:paddingLeft="10dip"
                        android:text=""
                        android:textColor="@color/txt_black"
                        android:textSize="@dimen/main_text_default" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dip"
                    android:layout_marginTop="10dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/recharge_margin_left"
                        android:text="@string/recharge_text13"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_default" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="@dimen/recharge_margin_right"
                        android:background="@drawable/rounded_corners_edit_bg"
                        android:orientation="horizontal" >
                        
                        <TextView
                            android:id="@+id/text_yuan"
                            android:layout_width="wrap_content"
                            android:layout_height="40dip"
                            android:layout_gravity="center_horizontal"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:layout_marginRight="10dip"
                            android:text="元"
                            android:textSize="@dimen/main_text_default" />
                        
                        <EditText
                            android:id="@+id/money"
                            android:layout_width="match_parent"
                            android:layout_height="40dip"
                            android:layout_marginRight="10dip"
                            android:layout_toLeftOf="@id/text_yuan"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:digits=".0123456789"
                            android:hint="@string/recharge_text14"
                            android:inputType="numberDecimal"
                            android:paddingLeft="10dip"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/txt_black"
                            android:textSize="@dimen/main_text_default" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/recharge_button"
                android:layout_width="@dimen/recharge_button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dip"
                android:background="@drawable/button_red_selector"
                android:gravity="center"
                android:text="@string/recharge_button_title"
                android:textColor="@color/white"
                android:textSize="@dimen/main_text_default" />
            <!-- 充值说明 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/recharge_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_default"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_text15"
                        android:layout_marginRight="5dip"
                        android:textColor="@color/red"
                        android:textSize="@dimen/main_text_default" />
                    <ImageView
                        android:layout_width="15dip"
                        android:layout_height="15dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/question_mark" />
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/description_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp"
                        android:text="1."
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="充值金额将在15分钟内到账，请耐心等待"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp"
                        android:text="2."
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="如果充值金额没有及时到账，请联系客服 020-38476886。"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp"
                        android:text="3."
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="首次充值成功后默认完成帐户认证，您的身份证信息和银行卡信息将绑定到福利金融帐号。"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp"
                        android:text="4."
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="请注意您的银行卡充值金额限制，以免造成不便。"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp"
                        android:text="5."
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="福利金融禁止使用信用卡充值。"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginTop="10dp"
                        android:text="6."
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="禁止洗钱、信用卡套现、虚假交易等行为，一经发现并确认，将终止该账户的使用。"
                        android:textColor="@color/txt_gray"
                        android:textSize="@dimen/main_text_small" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>